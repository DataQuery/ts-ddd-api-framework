{
  "name": "tsc-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsc --watch & nodemon dist",
    "b": "ts-node src",
    "watch": "nodemon -e ts -w ./src -x npm run watch:serve",
    "c": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "watch:serve": "ts-node src/index.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.0",
    "@types/glob": "^7.1.1",
    "express": "^4.17.1",
    "glob": "^7.1.4",
    "module-alias": "^2.2.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "nodemon": "^1.19.1",
    "ts-node-dev": "^1.0.0-pre.40"
  },
  "_moduleAliases": {
    "~": "dist"
  }
}
